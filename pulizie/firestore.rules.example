rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Stato globale dell'app
    match /turni/state {
      allow read, write: if request.auth != null;
    }

    // Blocca tutto il resto per default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
